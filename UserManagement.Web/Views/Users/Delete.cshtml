@model UserManagement.Models.User
@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<div>
    <hr />
    <div class="alert alert-danger">
        Are you sure you want to delete this user?
    </div>
    <dl class="container">
        <div class="col-md-6 agile_tv_series_grid_right">
            <p class="fexi_header"><span>Name: </span>@Model.Forename @Model.Surname</p>
            <p class="fexi_header_para"><span>Date of Birth: </span> @Model.DateOfBirth </p>
            <p class="fexi_header_para"><span>@Html.DisplayNameFor(Model => Model.Email): </span> @Model.Email </p>
            <p class="fexi_header_para"><span>Are they active?: </span> @(Model.IsActive ? "Yes" : "No")</p>
        </div>
    </dl>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div class="form-group">
                <input asp-action="Delete" type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<div>
    <a asp-controller="Users" asp-action="List" class="btn btn-primary">Cancel</a>
</div>
